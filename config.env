# Finetune Ingest - Centralized Configuration
# Copy this file to .env and customize the values

# =============================================================================
# LLM API Keys
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# Ollama Configuration (for local models)
# =============================================================================
OLLAMA_BASE_URL=http://192.168.50.133:11434

# =============================================================================
# Data Generator Configuration
# =============================================================================

# LLM Provider Settings
GENERATOR_PROVIDER=local
GENERATOR_MODEL=qwen3:14b
GENERATOR_TEMPERATURE=0.3
GENERATOR_MAX_TOKENS=2000

# Document Processing Settings (Split Workflow)
GENERATOR_INCOMING_DIR=/data/incoming
GENERATOR_PROCESS_DIR=/data/chunks          # For document chunks
GENERATOR_OUTPUT_DIR=/data/qa_results       # For individual Q&A files
GENERATOR_OUTPUT_FILE=/data/results/training_data.json  # Final combined file

# Legacy Processing Settings (Single-Step Workflow)
# GENERATOR_PROCESS_DIR=/data/process       # Uncomment for legacy workflow

# Text Chunking Settings
GENERATOR_CHUNK_SIZE=1000
GENERATOR_CHUNK_OVERLAP=200
GENERATOR_SPLITTING_STRATEGY=recursive

# Q&A Generation Settings
GENERATOR_QUESTIONS_PER_CHUNK=5
GENERATOR_BATCH_PROCESSING=false           # Recommended: false for split workflow
GENERATOR_RESUME=true                      # Recommended: true for resumability

# =============================================================================
# Validator Configuration
# =============================================================================

# LLM Provider Settings for Validation
VALIDATOR_PROVIDER=local
VALIDATOR_MODEL=qwen3:14b
VALIDATOR_TEMPERATURE=0.1

# Validation Input/Output
VALIDATOR_INPUT=/data/results/training_data.json
VALIDATOR_OUTPUT=/data/results/training_data_validation_report.json
VALIDATOR_FILTERED_OUTPUT=/data/results/training_data_filtered.json

# Validation Thresholds
VALIDATOR_THRESHOLD=8.0
VALIDATOR_FILTER_THRESHOLD=7.0
VALIDATOR_BATCH_SIZE=10

# Validation Options
VALIDATOR_SHOW_DETAILS=false
VALIDATOR_SHOW_FAILED_ONLY=false
VALIDATOR_QUIET=false

# =============================================================================
# Ollama Model-Specific Parameters
# =============================================================================
OLLAMA_TOP_K=40
OLLAMA_TOP_P=0.9
OLLAMA_REPEAT_PENALTY=1.1
OLLAMA_NUM_PREDICT=512
# OLLAMA_STOP=["<|im_end|>", "<|endoftext|>"]
